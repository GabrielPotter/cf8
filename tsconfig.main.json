{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "sourceMap": true
  },
  "include": [
    "src/main/**/*.ts",
    "src/preload/**/*.ts",
    "src/windows/**/*.ts",
    "src/workers/**/*.ts",
    "src/shared/**/*.ts"
  ]
}
